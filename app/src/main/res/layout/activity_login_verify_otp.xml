<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterOTP">
    <ImageView
        android:background="#FF8F00"
        android:layout_width="match_parent"
        android:layout_height="210dp" />




    <ImageView
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:src="@mipmap/ic_main_icon"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:padding="10dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Verify Phone Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <EditText
                    android:id="@+id/login_enter_OTP"
                    android:hint="  Enter OTP"
                    android:drawableLeft="@drawable/adjust_password"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:paddingRight="10dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/background_login"
                    android:drawableStart="@drawable/adjust_password"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:inputType="text"
                    android:maxLines="1"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/directions"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/login_resend_otp"
                    android:textStyle="bold"
                    android:textColor="#FF8F00"
                    android:text="Resend OTP "
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
                <TextView

                    android:text="   in  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/login_otpTimer"
                    android:text="Timer Mintues  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <Button
                android:id="@+id/login_verify_Button"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="VERIFY"
                android:textSize="15sp"
                android:background="@drawable/signin_button"
                android:layout_height="30dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>