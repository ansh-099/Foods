<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/restCard"
        android:backgroundTint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/res_name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/res_address"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/res_phone"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="PhoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ResImage"
                        android:layout_width="85dp"
                        android:layout_height="60dp"
                        android:src="@drawable/res1"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/ic_explore_green_400_18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#FF8F00"
                            android:text=" Explore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
            android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">



                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/res_timing"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:text="Timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">




                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/res_min_order"
                        android:textStyle="bold"
                        android:text="MinOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#d3d3d3"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>