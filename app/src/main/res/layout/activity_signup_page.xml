<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPage">


    <ImageView
        android:background="#2E8B57"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:src="@mipmap/mainfood"
            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:padding="10dp"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginTop="5dp"
                        android:text="Sign Up "
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textColor="#FF8F00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="sans-serif-condensed"
                            android:hint="  User Name"
                            android:id="@+id/RegUserName"
                            android:drawableLeft="@drawable/adjust_person"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:paddingRight="1dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="@drawable/background_login"
                            android:inputType="text"
                            android:maxLines="1"/>
                    </LinearLayout>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/RegEmail"
                            android:hint="  Email"
                            android:drawableLeft="@drawable/adjust_email"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:paddingRight="1dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="@drawable/background_login"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </LinearLayout>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/RegPassword"
                            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/background_login"
                            android:drawableLeft="@drawable/adjust_password"
                            android:hint="  Password"
                            android:inputType="textPassword"
                            android:paddingBottom="1dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="1dp"
                            android:textSize="15sp" />

                    </LinearLayout>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/RegRePassword"
                            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                            android:hint="  Confirm Password"
                            android:inputType="textPassword"
                            android:drawableLeft="@drawable/adjust_password"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="@drawable/background_login"
                            />

                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp" />


                    <!--<LinearLayout-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->

                        <!--<EditText-->
                            <!--android:id="@+id/RegPhoneNo"-->
                            <!--android:hint="  Phone Number"-->
                            <!--android:inputType="phone"-->
                            <!--android:drawableLeft="@drawable/adjust_phoneno"-->
                            <!--android:paddingLeft="15dp"-->
                            <!--android:layout_marginRight="15dp"-->
                            <!--android:layout_marginLeft="15dp"-->
                            <!--android:textSize="15dp"-->
                            <!--android:paddingRight="1dp"-->
                            <!--android:paddingTop="1dp"-->
                            <!--android:paddingBottom="1dp"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="33dp"-->
                            <!--android:background="@drawable/background_login"-->
                            <!--/>-->
                    <!--</LinearLayout>-->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/RegSignUp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#ffffff"
                        android:text="SIGN UP"
                        android:textSize="15dp"
                        app:cornerRadius="10dp"
                        android:backgroundTint="#2E8B57"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="sans-serif-condensed"
                            android:text="Unable to Sign Up? "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/RegContactUs"
                            android:textStyle="bold"
                            android:textColor="#FF8F00"
                            android:text="Contact Us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>